<SignupScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 10]
        spacing: 10
        size_hint: (1, 1)  # Fill the entire screen

        canvas.before:
            Color:
                rgba: 0.145, 0.596, 0.922, 0.7  # Light blue color
            Rectangle:
                pos: self.pos
                size: self.size
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            size_hint_y: None
            height: dp(50)

            Button:
                text: 'Back >'
                size_hint: None, None
                size: dp(100), dp(50)
                on_release: app.sm.current = 'login'
        Label:
            text: "Signup"
            font_size: '40sp'
            color: 1, 1, 1, 1
            size_hint_y: None
            height: dp(50)
            pos_hint: {'center_x': 0.5}

        Widget:
            # Spacer to push content up, adjust size_hint_y to control space
            size_hint_y: 0.1

        BoxLayout:
            orientation: 'vertical'
            padding: [20, 5]
            spacing: 10
            size_hint_y: None
            height: self.minimum_height

            TextInput:
                id: username
                hint_text: "Username"
                multiline: False
                size_hint_y: None
                height: dp(40)
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1

            TextInput:
                id: email
                hint_text: "Email Address"
                multiline: False
                size_hint_y: None
                height: dp(40)
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1

            TextInput:
                id: number
                hint_text: "Phone Number"
                multiline: False
                size_hint_y: None
                height: dp(40)
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1

            TextInput:
                id: dob
                hint_text: "Date of Birth"
                multiline: False
                size_hint_y: None
                height: dp(40)
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1

            TextInput:
                id: password
                hint_text: "Password"
                multiline: False
                password: True
                size_hint_y: None
                height: dp(40)
                background_color: 1, 1, 1, 1

            TextInput:
                id: confirm_password
                hint_text: "Confirm Password"
                multiline: False
                size_hint_y: None
                height: dp(40)
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1

            Button:

                text: "Signup"
                size_hint_y: None
                height: dp(60)
                #background_normal: ''
                background_color: 0.1, 0.384, 0.588, 0.5
                on_release: app.sm.current = 'initialoptions'
                # on_release: root.submit_signup_data()


        Widget:
            # Another spacer at the bottom, adjust size_hint_y as needed
            size_hint_y: 0.1
<ResetPasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)  # Fill the entire screen

        canvas.before:
            Color:
                rgba: 0.086, 0.341, 0.459, 1  # Light blue background
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            canvas.before:
                Color:
                    rgba: 0.569, 0.796, 0.902, 1  # Dark blue banner
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Reset Password"
                font_size: '35sp'
                font_name: 'assets/font.ttf'
                bold: True
                color: 1, 1, 1, 1
                size_hint: (1, None)
                height: dp(50)
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                padding_x: dp(10)  # Add padding to the left


            BoxLayout:
                size_hint: None, None
                size: dp(40), dp(40)
                padding: dp(5)
                pos_hint: {'center_y': 0.5}
                canvas.before:
                    Color:
                        rgba: 0.086, 0.341, 0.459, 1  # Dark blue circle
                    Ellipse:
                        size: self.size
                        pos: self.pos

                Button:
                    background_normal: ''
                    background_color: [0, 0, 0, 0]  # Fully transparent background
                    on_release: app.sm.current = 'login'
                    size_hint: None, None
                    size: dp(30), dp(30)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    Image:
                        source: 'assets/arrow-55-24.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

        BoxLayout:
            orientation: 'vertical'
            padding: [20, 20]
            spacing: 12

            Label:
                text: "Email Address"
                font_size: '16sp'
                font_name: 'assets/font.ttf'
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: dp(20)
                halign: 'left'
                text_size: self.size

            BoxLayout:
                size_hint_y: None
                height: dp(40)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background for rounded rectangle
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]

                TextInput:
                    id: email
                    multiline: False
                    font_name: 'assets/font2.ttf'
                    font_size: '16sp'
                    bold: True
                    background_normal: ''  # Ensure no default background
                    background_color: [0, 0, 0, 0]  # Fully transparent background
                    foreground_color: 0, 0, 0, 1

            Widget:
                size_hint_y: None
                height: dp(20)  # Adjust this to match the desired spacing

            Button:
                text: "Send Link"
                font_size: '16sp'  # Make the send link button text the same size as the other labels
                font_name: 'assets/font.ttf'
                bold: True
                size_hint_y: None
                height: dp(60)
                background_normal: ''
                background_color: 0.569, 0.796, 0.902, 1  # Light blue button
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]
                canvas.after:
                    Color:
                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3  # Thicker border
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]
                on_release: app.sm.current = 'daily quiz'

            Widget:
            Widget:
<AboutScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)  # Fill the entire screen

        canvas.before:
            Color:
                rgba: 0.569, 0.796, 0.902, 1  # Light blue background
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            canvas.before:
                Color:
                    rgba: 0.569, 0.796, 0.902, 1  # Dark blue banner
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "About!"
                font_size: '40sp'
                font_name: 'assets/font.ttf'
                bold: True
                color: 1, 1, 1, 1
                size_hint: (1, None)
                height: dp(50)
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                padding_x: dp(10)

            BoxLayout:
                size_hint: None, None
                size: dp(40), dp(40)
                padding: dp(5)
                pos_hint: {'center_y': 0.5}
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1  # Dark blue circle
                    Ellipse:
                        size: self.size
                        pos: self.pos

                Button:
                    background_normal: ''
                    background_color: [0, 0, 0, 0]  # Fully transparent background
                    on_release: app.sm.current = 'userinfo'
                    size_hint: None, None
                    size: dp(30), dp(30)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    Image:
                        source: 'assets/user-24.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

        Widget:
            size_hint_y: None
            height: dp(120)

        BoxLayout:
            orientation: 'vertical'
            padding: [20, 5]
            spacing: 12

            Label:
                text: 'The purpose of this application:'
                font_name: 'assets/font.ttf'
                font_size: dp(20)
                bold: True
                size_hint_y: None
                height: dp(40)
                color: 1, 1, 1, 1

            BoxLayout:
                size_hint_y: None
                height: dp(300)
                width: dp(300)
                pos_hint: {'center_x': 0.5}
                padding: [10, 10]
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1  # Dark blue background for rounded rectangle
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]
                canvas.after:
                    Color:
                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]

                Label:
                    text: "Our app, developed by a dedicated team of five student developers, aims to support students in managing their daily activities and wellness. By providing features such as daily quizzes, activity tracking, and wellness scheduling, this app helps students stay organized, motivated, and engaged in their personal growth. The combination of user-friendly design and effective functionality makes it an essential tool for enhancing the overall student experience."
                    font_size: '18sp'
                    font_name: 'assets/font2.ttf'
                    bold: True
                    color: 1, 1, 1, 1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

        Widget:
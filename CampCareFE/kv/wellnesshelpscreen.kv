<WellnessHelpScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)  # Fill the entire screen

        canvas.before:
            Color:
                rgba: 0.1, 0.6, 0.8, 1  # Light blue background
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            canvas.before:
                Color:
                    rgba: 0.086, 0.341, 0.459, 1  # Dark blue banner
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Wellness Help"
                font_size: '40sp'
                font_name: 'assets/font.ttf'
                bold: True
                color: 1, 1, 1, 1
                size_hint: (1, None)
                height: dp(50)
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                padding_x: dp(10)

            BoxLayout:
                size_hint: None, None
                size: dp(40), dp(40)
                padding: dp(5)
                pos_hint: {'center_y': 0.5}
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1 # Dark blue circle
                    Ellipse:
                        size: self.size
                        pos: self.pos

                Button:
                    background_normal: ''
                    background_color: [0, 0, 0, 0]  # Fully transparent background
                    on_release: app.sm.current = 'home'
                    size_hint: None, None
                    size: dp(30), dp(30)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    Image:
                        source: 'assets/arrow-55-24.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y


        GridLayout:
            cols: 3
            padding: 20
            spacing: 12

            Button:
                id: outdoors
                text: 'Going\noutdoors'
                font_name: 'assets/font.ttf'
                bold: True
                background_normal: ''
                background_color: 0.086, 0.341, 0.459, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]
                canvas.after:
                    Color:
                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]
                on_release: root.show_details('Going Outdoors', 'Description for Going Outdoors...')

            Button:
                id: socialisation
                text: 'Social time'
                font_name: 'assets/font.ttf'
                bold: True
                background_normal: ''
                background_color: 0.086, 0.341, 0.459, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]
                canvas.after:

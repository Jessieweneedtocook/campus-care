<WellnessHelpScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 10]
        spacing: 10
        size_hint: (1, 1)  # Fill the entire screen

        canvas.before:
            Color:
                rgba: 0.145, 0.596, 0.922, 0.7  # Light blue color
            Rectangle:
                pos: self.pos
                size: self.size
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            size_hint_y: None
            height: dp(50)

            Button:
                text: 'back >'
                size_hint: None, None
                size: dp(100), dp(50)
                on_release: app.sm.current = 'home'
        Label:
            text: "Wellness Help"
            font_size: '40sp'
            color: 1, 1, 1, 1
            size_hint_y: None
            height: dp(50)
            pos_hint: {'center_x': 0.5}

        GridLayout:
            cols: 3
            padding: 10
            spacing: 10

            Button:
                id: outdoors
                text: 'Going Outdoors'
                on_release: root.show_details('Going Outdoors', 'Description for Going Outdoors...')

            Button:
                id: socialisation
                text: 'Socialisation'
                on_release: root.show_details('Socialisation', 'Description for Socialisation...')

            Button:
                id: work
                text: 'Uni Work'
                on_release: root.show_details('Uni Work', 'Description for Uni Work...')

            Button:
                id: hobby
                text: 'Hobby Time'
                on_release: root.show_details('Hobby Time', 'Description for Hobby Time...')

            Button:
                id: diet
                text: 'Good Diet'
                on_release: root.show_details('Good Diet', 'Description for Good Diet...')

            Button:
                id: exercise
                text: 'Exercise'
                on_release: root.show_details('Exercise', 'Description for Exercise...')

            Button:
                id: sleep
                text: 'Good Sleep'
                on_release: root.show_details('Good Sleep', 'Description for Good Sleep...')

            Image:
                source: 'assets/logo3.png'

            Button:
                id: alcohol
                text: 'Alcohol\nModeration'
                on_release: root.show_details('Alcohol Moderation', 'Description for Alcohol Moderation...')


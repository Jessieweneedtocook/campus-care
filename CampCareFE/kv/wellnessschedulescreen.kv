                        radius: [10, 10, 10, 10]
                canvas.after:
                    Color:
                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]
                on_release: root.select_activity('Studying', self)
            Button:
                id: hobbies_btn
                text: "Hobbies"
                font_name: 'assets/font2.ttf'
                font_size: '16sp'
                bold: True
                background_normal: ''
                background_color: 0.929, 0.659, 0.71, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.929, 0.659, 0.71, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]
                canvas.after:
                    Color:
                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]
                on_release: root.select_activity('Hobbies', self)


<ActivityPopup>:
    title: "Activity Log"
    size_hint: 0.8, 0.6
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: "Logged Activities:"
        BoxLayout:
            id: logged_activities_box
            orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: dp(40)
            Button:
                text: "Close"
                on_release: root.dismiss()
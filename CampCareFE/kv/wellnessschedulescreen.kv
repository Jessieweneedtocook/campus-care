<WellnessScheduleScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)  # Fill the entire screen

        canvas.before:
            Color:
                rgba: 0.569, 0.796, 0.902, 1  # Light blue background
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            canvas.before:
                Color:
                    rgba: 0.086, 0.341, 0.459, 1  # Dark blue banner
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Wellness Scheduler"
                font_size: '25sp'
                font_name: 'assets/font.ttf'
                bold: True
                color: 1, 1, 1, 1
                size_hint: (1, None)
                height: dp(50)
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                padding_x: dp(10)

            BoxLayout:
                size_hint: None, None
                size: dp(40), dp(40)
                padding: dp(5)
                pos_hint: {'center_y': 0.5}
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1  # Dark blue circle
                    Ellipse:
                        size: self.size
                        pos: self.pos

                Button:
                    background_normal: ''
                    background_color: [0, 0, 0, 0]  # Fully transparent background
                    on_release: app.sm.current = 'home'
                    size_hint: None, None
                    size: dp(30), dp(30)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    Image:
                        source: 'assets/arrow-55-24.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

        Widget:
            size_hint_y: None
            height: dp(30)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            padding: [10, 0]

            Widget:

            Button:
                text: 'Clear All'
                font_name: 'assets/font.ttf'
                bold: True
                size_hint: None, None
                size: dp(100), dp(50)
                background_normal: ''
                background_color: 0.086, 0.341, 0.459, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]
                canvas.after:
                    Color:
                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]
                on_release: root.clear_all_activities()

            Widget:

        Widget:
            size_hint_y: None
            height: dp(20)

        ScrollView:
            size_hint: (1, None)
            height: dp(400)
            GridLayout:
                id: calendar_days
                cols: 7
                spacing: 5
                padding: [10, 10]
                row_default_height: dp(70)
                row_force_default: True
                size_hint_y: None
                height: self.minimum_height

                # Days of the week labels
                Label:
                    text: "M"
                    font_name: 'assets/font.ttf'
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(40)
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                Label:
                    text: "T"
                    font_name: 'assets/font.ttf'
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(40)
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                Label:
                    text: "W"
                    font_name: 'assets/font.ttf'
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(40)
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                Label:
                    text: "T"
                    font_name: 'assets/font.ttf'
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(40)
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                Label:
                    text: "F"
                    font_name: 'assets/font.ttf'
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(40)
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                Label:
                    text: "S"
                    font_name: 'assets/font.ttf'
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(40)
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                Label:
                    text: "S"
                    font_name: 'assets/font.ttf'
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(40)
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

                # Example of adding date buttons
                Button:
                    text: "1"
                    font_name: 'assets/font2.ttf'
                    font_size: '16sp'
                    bold: True
                    background_normal: ''
                    background_color: 0.086, 0.341, 0.459, 1
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(40)
                Button:
                    text: "2"
                    font_name: 'assets/font2.ttf'
                    font_size: '16sp'
                    bold: True
                    background_normal: ''
                    background_color: 0.086, 0.341, 0.459, 1
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(40)
                # Add more buttons for the dates...

        Widget:
            size_hint_y: None
            height: dp(30)
        Label:
            text: "Activity Menu"
            font_size: '20sp'
            font_name: 'assets/font.ttf'
            bold: True
            color: 1, 1, 1, 1
            size_hint_y: None
            height: dp(20)
            halign: 'center'
            valign: 'middle'
            text_size: self.size
        GridLayout:
            cols: 4
            padding: 10
            spacing: 10

            Button:
                id: exercise_btn
                text: "Exercise"
                font_name: 'assets/font2.ttf'
                font_size: '16sp'
                bold: True
                background_normal: ''
                background_color: 0.941, 0.941, 0.553, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.941, 0.941, 0.553, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]
                canvas.after:
                    Color:
                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]
                on_release: root.select_activity('Exercise', self)
            Button:
                id: socialisation_btn
                text: "Socialisation"
                font_name: 'assets/font2.ttf'
                font_size: '16sp'
                bold: True
                background_normal: ''
                background_color: 0.816, 0.671, 0.961, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.816, 0.671, 0.961, 1
                    RoundedRectangle:
                        size: self.size

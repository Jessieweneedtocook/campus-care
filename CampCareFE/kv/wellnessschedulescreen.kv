                        radius: [10, 10, 10, 10]
                canvas.after:
                    Color:
                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]
                on_release: root.select_activity('Socialisation', self)
            Button:
                id: studying_btn
                text: "Studying"
                font_name: 'assets/font2.ttf'
                font_size: '16sp'
                bold: True
                background_normal: ''
                background_color: 0.643, 0.851, 0.655, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.643, 0.851, 0.655, 1
                    RoundedRectangle:

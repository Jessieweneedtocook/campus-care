                bold: True
                size_hint: None, None
                size: dp(160), dp(50)
                background_normal: ''
                background_color: 0.086, 0.341, 0.459, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]
                canvas.after:
                    Color:
                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]

            ShareFacebook:
                text: 'Share on Facebook'
                font_name: 'assets/font.ttf'

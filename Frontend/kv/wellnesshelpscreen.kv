                on_release: root.show_details('Good Sleep', 'Good sleep helps you to improve your\nattention and concentration. It keeps you feeling\nrefreshed and alert during the day, as well as\nkeeping your immune system\nstrong.')

            Image:
                source: 'assets/logo3.png'

            Button:
                id: alcohol
                text: 'Alcohol\nModeration'
                font_name: 'assets/font.ttf'
                bold: True
                background_normal: ''
                background_color: 0.086, 0.341, 0.459, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1
                    RoundedRectangle:

                        rgba: 0.239, 0.514, 0.639, 1  # Medium blue border
                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]
                on_release: root.show_details('Exercise', 'Exercise is good for building up a strong\ncardiovascular system, decreases risk of major\nillnesses, increases the levels of endorphins\nin your body and helps keep your\nmuscles and bones stronger and healthier.')

            Button:
                id: sleep
                text: 'Good Sleep'
                font_name: 'assets/font.ttf'
                bold: True
                background_normal: ''
                background_color: 0.086, 0.341, 0.459, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.6, 0.8, 1
                    RoundedRectangle:

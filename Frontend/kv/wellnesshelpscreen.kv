                    Line:
                        width: 3
                        rounded_rectangle: [self.x, self.y, self.width, self.height, 10, 10, 10, 10]
                on_release: root.show_details('Good Diet', 'Getting a balanced diet of proteins, carbs\nand fats allow for a variety of different benefits\nincluding feeling more energised during the day,\nfaster muscle growth and repair, and balancing\nhormones in your body. A balanced diet is\nreally important for you to live\na happy and healthy life!')

            Button:
                id: exercise
                text: 'Exercise'
                font_name: 'assets/font.ttf'
                bold: True
                background_normal: ''
                background_color: 0.086, 0.341, 0.459, 1
                color: 1, 1, 1, 1
                border: (4, 4, 4, 4)

<DailyQuizScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)  # Fill the entire screen

        canvas.before:
            Color:
                rgba: 0.569, 0.796, 0.902, 1  # Light blue background
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            canvas.before:
                Color:
                    rgba: 0.086, 0.341, 0.459, 1  # Dark blue banner
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Daily Quiz"
                font_size: '30sp'
                font_name: 'assets/font.ttf'
                bold: True
                color: 1, 1, 1, 1
                size_hint: (1, None)
                height: dp(50)
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                padding_x: dp(10)

        Widget:

        BoxLayout:
            orientation: 'vertical'
            padding: [20, 5]
            spacing: 12

            Label:
                id: question_label
                font_name: 'assets/font.ttf'
                bold: True
                size_hint_y: None
                height: dp(40)
                color: 1, 1, 1, 1

            BoxLayout:
                id: answers_container
                orientation: 'vertical'
                size_hint_y: None
                height: dp(150)
                spacing: 10

        Widget:

<AdminScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        size_hint: (1, 1)  # Fill the entire screen

        canvas.before:
            Color:
                rgba: 0, 0, 0, 0  # Light blue color
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y: None
            height: 400
            Image:
                source: 'assets/SystemsAdmin.jpg'  # Where user logs will be displayed
                size: dp(400), dp(400)

            FloatLayout:
                size_hint: None, None
                size: dp(110), dp(115)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1  # Medium blue circle
                    Ellipse:
                        size: self.size
                        pos: self.pos

                Image:
                    source: 'assets/logo3.png'
                    size_hint: None, None
                    size: dp(160), dp(170)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.45}



        # Statistics and options buttons

        Button:
            text: "Delete user"
            bold: True
            font_size: '30sp'
            background_color: 1, 0, 0, 1
            font_name: 'assets/font.ttf'
            on_release: root.manager.current = root.show_delete_account()

        Widget:

        # Footer or additional controls
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Return to home"
                background_color: 1, 0, 0, 1
                font_name: 'assets/font2.ttf'
                on_release: root.manager.current = 'home'


